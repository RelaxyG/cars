<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @car.name %>
</p>

<p>
  <strong>Company:</strong>
  <%= @car.company %>
</p>
<p>
  <strong>TechLead:</strong>
  <%= @car.tech_lead %>
</p>

<p>
  <strong>Price:</strong>
  <%= @car.price %>
</p>
<p>
  <strong>Review:</strong>
  <% @car.reviews.each do |r| %>
    <p><%=r.content%></p>
    <p><%= link_to "Remove",
                  review_path(r),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </p>
  <%end%>
</p>

<%= link_to 'Edit', edit_car_path(@car) %> |
<%= link_to 'Back', cars_path %>
<%= link_to 'Leave a review', new_car_review_path(@car) %>
